<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_cc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:background="@android:color/background_light"
        tools:layout_editor_absoluteY="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/update_card"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onUpdateButtonPressed"
                android:text="Update" />

            <Button
                android:id="@+id/delete_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onDeleteButtonPressed"
                android:text="Delete" />
        </LinearLayout>

        <EditText
            android:id="@+id/CardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Card Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/CardStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Card Start Date"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/RewardPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Reward Points"
            android:inputType="number" />

        <EditText
            android:id="@+id/MinSpend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Minimum Spend"
            android:inputType="number" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>